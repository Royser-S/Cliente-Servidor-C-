@model IEnumerable<ExamenT2_Cliente.Models.Editorial>

@{
    ViewData["Title"] = "Listado de Editoriales";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-book-half"></i> Mantenimiento de Editoriales
        </h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Nuevo Registro
        </a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body bg-light">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">Filtro:</span>
                    <input type="text" name="busqueda" class="form-control" placeholder="Buscar por nombre de editorial..." />

                    <button type="submit" class="btn btn-primary">Buscar</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CodigoEditorial)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreEditorial)</th>
                    <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>País</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted p-4">
                            No se encontraron registros.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.CodigoEditorial)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreEditorial)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @Html.DisplayFor(modelItem => item.NombrePais)
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.CodigoEditorial" class="btn btn-warning btn-sm">
                                        Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CodigoEditorial" class="btn btn-warning btn-sm">
                                        Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CodigoEditorial"
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('¿Estás seguro de eliminar la editorial @item.NombreEditorial?');">
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>