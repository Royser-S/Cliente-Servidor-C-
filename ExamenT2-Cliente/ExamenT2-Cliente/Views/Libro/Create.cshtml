@model ExamenT2_Cliente.Models.Libro

@{
    ViewData["Title"] = "Nuevo Libro";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Registrar Nuevo Libro</h3>
        </div>
        <div class="card-body">

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">@ViewBag.Mensaje</div>
            }

            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CodigoLibro" class="control-label fw-bold"></label>
                            <input asp-for="CodigoLibro" class="form-control" maxlength="4" placeholder="Ej: L001" />
                            <span asp-validation-for="CodigoLibro" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TituloLibro" class="control-label fw-bold"></label>
                            <input asp-for="TituloLibro" class="form-control" />
                            <span asp-validation-for="TituloLibro" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Autor" class="control-label fw-bold"></label>
                            <input asp-for="Autor" class="form-control" />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Genero" class="control-label fw-bold"></label>
                            <input asp-for="Genero" class="form-control" />
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CodigoEditorial" class="control-label fw-bold"></label>
                            <select asp-for="CodigoEditorial" class="form-select" asp-items="ViewBag.Editoriales">
                                <option value="">-- Seleccione una Editorial --</option>
                            </select>
                            <span asp-validation-for="CodigoEditorial" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                    <button type="submit" class="btn btn-success px-5">Guardar Registro</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}