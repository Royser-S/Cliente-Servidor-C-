@model ExamenT2_Cliente.Models.Libro

@{
    ViewData["Title"] = "Detalle del Libro";
}

<div class="container mt-4">
    <div class="card shadow border-info">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Detalle del Libro</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodigoLibro)</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.CodigoLibro)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TituloLibro)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TituloLibro)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Autor)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Autor)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Genero)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Genero)</dd>

                <dt class="col-sm-3">Editorial</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@Html.DisplayFor(model => model.NombreEditorial)</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.CodigoLibro" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>