@model IEnumerable<ExamenT2_Cliente.Models.Libro>

@{
    ViewData["Title"] = "Listado de Libros";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-journal-bookmark-fill"></i> Mantenimiento de Libros</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-lg"></i> Nuevo Libro
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body bg-light">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">Filtrar por Autor:</span>
                    <input type="text" name="busqueda" class="form-control" placeholder="Escriba el nombre del autor..." />
                    <button type="submit" class="btn btn-primary">Buscar</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CodigoLibro)</th>
                    <th>@Html.DisplayNameFor(model => model.TituloLibro)</th>
                    <th>@Html.DisplayNameFor(model => model.Autor)</th>
                    <th>@Html.DisplayNameFor(model => model.Genero)</th>
                    <th>Editorial</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted p-4">No se encontraron libros registrados.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.CodigoLibro)</td>
                            <td>@Html.DisplayFor(modelItem => item.TituloLibro)</td>
                            <td>@Html.DisplayFor(modelItem => item.Autor)</td>
                            <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @Html.DisplayFor(modelItem => item.NombreEditorial)
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.CodigoLibro" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.CodigoLibro" class="btn btn-info btn-sm text-white">Detalles</a>

                                    <a asp-action="Delete" asp-route-id="@item.CodigoLibro"
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('¿Está seguro de eliminar el libro @item.TituloLibro?');">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>